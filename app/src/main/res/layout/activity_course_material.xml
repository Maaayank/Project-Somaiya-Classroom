<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_color">

    <TextView
        android:id="@+id/textView0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Course Material:"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="#404040"
        app:fontFamily="@font/roboto_slab"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Chapter 1. Overview of C"
        android:textColor="#404040"
        app:fontFamily="@font/roboto_slab"
        android:textSize="18sp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button1"
        android:background="@drawable/button_shape"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="#ffff"
        android:inputType="text"
        android:layout_marginTop="5dp"
        app:fontFamily="@font/roboto_slab"
        android:text="Upload" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Chapter 2. Operators"
        android:textColor="#404040"
        app:fontFamily="@font/roboto_slab"
        android:textSize="18sp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Upload"
        android:textSize="15sp"
        android:textColor="#ffff"
        android:inputType="text"
        android:background="@drawable/button_shape"
        app:fontFamily="@font/roboto_slab"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Chapter 3. Control Structures"
        android:textColor="#404040"
        app:fontFamily="@font/roboto_slab"
        android:textSize="18sp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="#ffff"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:background="@drawable/button_shape"
        app:fontFamily="@font/roboto_slab"
        android:text="Upload" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Chapter 4. Arrays and Structures"
        android:textColor="#404040"
        app:fontFamily="@font/roboto_slab"
        android:textSize="18sp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="#ffff"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:background="@drawable/button_shape"
        app:fontFamily="@font/roboto_slab"
        android:text="Upload" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Chapter 5. User-defined Functions"
        android:textColor="#404040"
        app:fontFamily="@font/roboto_slab"
        android:textSize="18sp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="#ffff"
        android:inputType="text"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_shape"
        app:fontFamily="@font/roboto_slab"
        android:text="Upload" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Chapter 6. Pointers and Files"
        android:textColor="#404040"
        app:fontFamily="@font/roboto_slab"
        android:textSize="18sp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="#ffff"
        android:inputType="text"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_shape"
        app:fontFamily="@font/roboto_slab"
        android:text="Upload" />
</LinearLayout>